generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")


}
model createaccount{
  customer_id String  @id @default(uuid()) @db.Uuid
  customer_email String @unique  @db.VarChar(40)
  password String  @db.VarChar(15)
  age Int
  address String  @db.VarChar(40)
  phone_number Int
  login login[]
  forgotpassword forgotpassword[]
customerupdateprofile Customerupdateprofile[]
searchhistory searchhistory[]
}

model login{
  name String @db.VarChar(30)
  email_id String @unique  @db.VarChar(40)
  phone_number Int
  login createaccount @relation(fields: [customer_id], references: [customer_id])
  customer_id String @db.Uuid @unique
}


model forgotpassword{
  name String @db.VarChar(30)
  email_id String @unique  @db.VarChar(40)
  phone_number Int
  forgotpassword createaccount @relation(fields: [customer_id], references: [customer_id])
  customer_id String @db.Uuid @unique
 
  

}


model Customerupdateprofile{
  name String @db.VarChar(30)
  email_id String @unique  @db.VarChar(40)
  phone_number Int
  customerupdateprofile createaccount @relation(fields: [customer_id], references: [customer_id])
  customer_id String @db.Uuid @unique
  age Int
  address String  @db.VarChar(40)
  
  
}
model searchhistory{
  date DateTime
   searchhistory createaccount @relation(fields: [customer_id], references: [customer_id])
  customer_id String @db.Uuid @unique
  service_id String  @unique
  serviceprovider_id String @unique
service_name String
}
